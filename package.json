{
  "name": "@lewebsimple/nuxt-graphql-fullstack",
  "description": "Nuxt 3 GraphQL Fullstack Starter",
  "version": "0.1.4",
  "author": "Pascal Martineau <pascal@lewebsimple.ca>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lewebsimple/nuxt-graphql-fullstack.git"
  },
  "scripts": {
    "build": "nuxt build",
    "codegen": "graphql-codegen",
    "dev": "run-p dev:*",
    "dev:nuxt": "nuxt dev --no-clear",
    "dev:codegen": "graphql-codegen -w",
    "dev:prisma": "prisma generate --watch",
    "lint": "eslint --fix . && stylelint --fix **/*.{css,scss,vue}",
    "prepare": "husky install && prisma generate && pnpm codegen && nuxt prepare && pnpm lint",
    "release": "pnpm lint && changelogen --release --push"
  },
  "prisma": {
    "schema": "server/prisma/schema.prisma"
  },
  "dependencies": {
    "@lewebsimple/nuxt3-svg": "^0.2.2",
    "@lucia-auth/adapter-prisma": "^3.0.0-beta.6",
    "@nuxthq/ui": "^2.5.0",
    "@pothos/core": "^3.30.0",
    "@pothos/plugin-scope-auth": "^3.19.2",
    "@prisma/client": "^5.0.0",
    "@urql/vue": "^1.1.2",
    "@vorms/core": "^1.1.0",
    "@vorms/resolvers": "^1.1.0",
    "graphql": "^16.7.1",
    "graphql-yoga": "^4.0.3",
    "lucia": "^2.0.0-beta.5",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^4.0.1",
    "@graphql-codegen/client-preset": "^4.0.1",
    "@lewebsimple/eslint-config": "^0.7.9",
    "@lewebsimple/stylelint-config": "^0.7.9",
    "@nuxt/devtools": "latest",
    "@types/node": "^20.4.2",
    "changelogen": "^0.5.4",
    "eslint": "^8.45.0",
    "graphql-config": "^5.0.2",
    "husky": "^8.0.3",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "nuxt": "^3.6.3",
    "prisma": "^5.0.0",
    "stylelint": "^15.10.1",
    "vue-tsc": "^1.8.5"
  },
  "eslintConfig": {
    "extends": "@lewebsimple/eslint-config"
  },
  "stylelint": {
    "extends": "@lewebsimple/stylelint-config"
  },
  "nano-staged": {
    "*.{js,ts,vue}": "eslint --fix",
    "*.{css,scss,vue}": "stylelint --fix"
  }
}
